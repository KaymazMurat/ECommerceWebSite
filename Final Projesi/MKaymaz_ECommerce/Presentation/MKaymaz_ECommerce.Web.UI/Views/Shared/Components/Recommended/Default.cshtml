@model List<ProductViewModel>

<div class="blog-section tp-pst">
    <div class="sec-title">
        <h3>Ürünler</h3>
    </div>
    <div class="blog-items">
        <div class="row">
            @foreach (ProductViewModel item in Model)
            {
                <div class="col-lg-4 col-md-4 col-sm-6 col-12">
                    <div class="blog-item">
                        <div class="blog-img">
                            <img src="@item.Barcode" alt="" />
                        </div>
                        <div class="blog-info">
                            <h3 class="post-title">
                                <a asp-controller="Home" asp-action="Post" asp-route-id="@item.Id" title="">@item.FullName</a>
                            </h3>
                             <h3 class="post-title">
                                <a asp-controller="Home" asp-action="Post" asp-route-id="@item.Id" title="">@item.Price1</a>
                            </h3>
                           @* <form class="variants add" asp-controller="Cart" asp-action="Index" method="post">
                                <button class="btn btn-addto-cart" type="button">Add To Cart</button>
                            </form>*@
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

