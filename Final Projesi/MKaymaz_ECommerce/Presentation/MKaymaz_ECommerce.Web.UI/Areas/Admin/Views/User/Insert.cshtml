@model CreateUserViewModel

@{
    ViewData["Title"] = "Insert";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="body_scroll">
    <div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12">
                <h2>Add User</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="User" asp-action="Index" asp-area"">User</a></li>
                </ul>
                <button class="btn btn-primary btn-icon mobile_menu" type="button"><i class="zmdi zmdi-sort-amount-desc"></i></button>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12">
                <button class="btn btn-primary btn-icon float-right right_icon_toggle_btn" type="button"><i class="zmdi zmdi-arrow-right"></i></button>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <form asp-controller="User" asp-action="Insert" method="post" enctype="multipart/form-data">
                    <div class="card">
                        <div class="body">
                            <div class="form-group">
                                <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name" />
                            </div>
                            <br />
                            <div class="form-group">
                                <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name" />
                            </div>
                            <br />
                            <div class="form-group">
                                <select asp-for="Status" asp-items="Html.GetEnumSelectList<Status>()" class="form-control"></select>
                            </div>
                            <br />
                            <div class="form-group">
                                <input asp-for="Title" type="text" class="form-control" placeholder="Title" />
                            </div>
                            <br />
                            <div class="form-group">
                                <input asp-for="Email" type="text" class="form-control" placeholder="Email" />
                            </div>
                            <br />
                            <div class="form-group">
                                <input asp-for="Password" type="text" class="form-control" placeholder="Password" />
                            </div>
                            <br />
                            <div class="form-group">
                                <input class="form-control" type="file" name="files">
                            </div>
                            <br />
                            <div class="col-lg-12 col-12 mb-30">
                                <label class="form-check-label" for="exampleCheck1">Check me out</label>
                                <input asp-for="IsAdmin" class="form-check-input" type="checkbox">
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="body">
                            <button type="submit" class="btn btn-info waves-effect m-t-20">SAVE</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Message"]
        </div>
    }
</div>

