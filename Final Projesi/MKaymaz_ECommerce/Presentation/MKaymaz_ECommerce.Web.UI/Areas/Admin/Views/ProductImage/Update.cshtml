@model UpdateProductImageViewModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="body_scroll">
    <div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12">
                <h2>Update Product Image</h2>
                <ul class="breadcrumb">
                     <li class="breadcrumb-item"><a asp-controller="ProductImage" asp-action="Index" asp-area"">ProductImage</a></li>
                </ul>
                <button class="btn btn-primary btn-icon mobile_menu" type="button"><i class="zmdi zmdi-sort-amount-desc"></i></button>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12">
                <button class="btn btn-primary btn-icon float-right right_icon_toggle_btn" type="button"><i class="zmdi zmdi-arrow-right"></i></button>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <form asp-controller="ProductImage" asp-action="Update" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <div class="card">
                        <div class="body">
                            <div class="form-group">
                                <input asp-for="Filename" type="text" class="form-control" placeholder="File Name" />
                            </div>
                            <br />
                            <div class="form-group">
                                <input asp-for="Extension" type="text" class="form-control" placeholder="Extension" />
                            </div>
                            <br />
                            <div class="form-group">
                                <input asp-for="DirectoryName" type="text" class="form-control" placeholder="Directory Name" />
                            </div>
                            <div class="form-group">
                                <select asp-for="ProductId" asp-items="@ViewBag.Products" class="form-control">
                                    <option>Please select Product..</option>
                                </select>
                            </div>
                             <div class="form-group">
                                <input class="form-control" type="file" name="files">
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="body">
                            <button type="submit" class="btn btn-info waves-effect m-t-20">UPDATE</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Message"]
        </div>
    }
</div>



