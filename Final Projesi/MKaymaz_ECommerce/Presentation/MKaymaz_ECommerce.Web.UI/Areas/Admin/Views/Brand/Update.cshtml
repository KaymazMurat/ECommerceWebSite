@model UpdateBrandViewModel

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="body_scroll">
    <div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12">
                <h2>Update Brand</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Brand" asp-action="Index" asp-area"">Brand</a></li>
                </ul>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12">
                <button class="btn btn-primary btn-icon float-right right_icon_toggle_btn" type="button"><i class="zmdi zmdi-arrow-right"></i></button>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <form asp-controller="Brand" asp-action="Update" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <div class="card">
                        <div class="body">
                            <div class="form-group">
                                <input asp-for="Name" type="text" class="form-control" placeholder="Brand Name" />
                            </div>
                            <br />
                            <div class="form-group">
                                <input asp-for="Slug" type="text" class="form-control" placeholder="Slug" />
                            </div>
                            <br />
                            <div class="form-group">
                                <input asp-for="SortOrder" type="text" class="form-control" placeholder="Sort Order" />
                            </div>
                            <br />
                            <div class="form-group">
                                <input asp-for="MetaDescription" type="text" class="form-control" placeholder="Description" />
                            </div>
                            <br />
                            <div class="form-group">
                                <input class="form-control" type="file" name="files">
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="body">
                            <button type="submit" class="btn btn-info waves-effect m-t-20">UPDATE</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Message"]
        </div>
    }
</div>