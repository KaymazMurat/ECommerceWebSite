@model CreateProductViewModel
@{
    ViewData["Title"] = "Insert";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="body_scroll">
    <div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12">
                <h2>Add Product</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Product" asp-action="Index" asp-area"">Product</a></li>
                </ul>
                <button class="btn btn-primary btn-icon mobile_menu" type="button"><i class="zmdi zmdi-sort-amount-desc"></i></button>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12">
                <button class="btn btn-primary btn-icon float-right right_icon_toggle_btn" type="button"><i class="zmdi zmdi-arrow-right"></i></button>
            </div>
        </div>
    </div>
    <div class="container-fluid">

        <div class="row">
            <div class="col-lg-12">
                <form asp-controller="Product" asp-action="Insert" method="post" enctype="multipart/form-data">
                    <div class="card">
                        <div class="body">
                            <div class="form-group">
                                <input asp-for="Name" type="text" class="form-control" placeholder="ProductName" />
                            </div>
                            <div class="form-group">
                                <input asp-for="FullName" type="text" class="form-control" placeholder="FullName" />
                            </div>
                            <div class="form-group">
                                <input asp-for="Sku" type="text" class="form-control" placeholder="Sku" />
                            </div>
                            <div class="form-group">
                                <input asp-for="Price1" type="text" class="form-control" placeholder="Price" />
                            </div>
                            <div class="form-group">
                                <input asp-for="StockTypeLabel" type="text" class="form-control" placeholder="Stock Type " />
                            </div>
                            <div class="form-group">
                                <select asp-for="TaxIncluded" class="form-control">
                                    <option>True</option>
                                    <option>False</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <select asp-for="Status" asp-items="Html.GetEnumSelectList<Status>()" class="form-control">
                                </select>
                            </div>
                            <div class="form-group">
                                <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control show-tick">
                                    <option>Select Category --</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <select asp-for="CurrencyId" asp-items="@ViewBag.Currencies" class="form-control show-tick">
                                    <option>Select Currency --</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <select asp-for="BrandId" asp-items="@ViewBag.Brands" class="form-control show-tick">
                                    <option>Select Brand --</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="file" name="files">
                            </div>
                            <div class="form-group">
                                <textarea asp-for="MetaDescription" class="summernote" placeholder="Description *"></textarea>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-info waves-effect m-t-20">SAVE</button>
                            </div>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Message"]
        </div>
    }
</div>
