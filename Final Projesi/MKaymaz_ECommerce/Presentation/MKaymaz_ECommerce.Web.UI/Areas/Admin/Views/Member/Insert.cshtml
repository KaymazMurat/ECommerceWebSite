@model CreateMemberViewModel

@{
    ViewData["Title"] = "Insert";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="body_scroll">
    <div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12">
                <h2>Add Member</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Member" asp-action="Index" asp-area"">Member</a></li>
                    <li class="breadcrumb-item active">New Member</li>
                </ul>
                <button class="btn btn-primary btn-icon mobile_menu" type="button"><i class="zmdi zmdi-sort-amount-desc"></i></button>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12">
                <button class="btn btn-primary btn-icon float-right right_icon_toggle_btn" type="button"><i class="zmdi zmdi-arrow-right"></i></button>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <form asp-controller="Member" asp-action="Insert" method="post" enctype="multipart/form-data">
                    <div class="card">
                        <div class="body">
                            <div class="form-group">
                                <input asp-for="FirstName" type="text" class="form-control" placeholder="FirstName" />
                            </div>
                            <br />
                            <div class="form-group">
                                <input asp-for="SurName" type="text" class="form-control" placeholder="SurName" />
                            </div>
                            <br />
                            <div class="form-group">
                                <input asp-for="Email" type="text" class="form-control" placeholder="E-Mail" />
                            </div>
                            <br />
                            <div class="form-group">
                                <input asp-for="BirthDate" type="text" class="form-control" placeholder="BirthDate" />
                            </div>
                            <br />
                            <div class="form-group">
                                <input asp-for="MobilePhoneNumber" type="text" class="form-control" placeholder="Mobile PhoneNumber" />
                            </div>
                            <br />
                            <div class="form-group">
                                <select asp-for="Status" asp-items="Html.GetEnumSelectList<Status>()" class="form-control"></select>
                            </div>
                            <br />
                            <div class="form-group">
                                <select asp-for="CountryId" asp-items="@ViewBag.Countries" class="form-control">
                                    <option>Please select Country..</option>
                                </select>
                            </div>
                            <br />
                            <div class="form-group">
                                <select asp-for="LocationId" asp-items="@ViewBag.Locations" class="form-control">
                                    <option>Please select Location..</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="body">
                            <button type="submit" class="btn btn-info waves-effect m-t-20">SAVE</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Message"]
        </div>
    }
</div>



